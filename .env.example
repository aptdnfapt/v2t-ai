# Gemini API Configuration
GEMINI_API_KEY="YOUR_API_KEY_HERE"
GEMINI_MODEL_NAME="gemini-2.0-flash"
GEMINI_FALLBACK_MODEL="gemini-2.0-flash"
GEMINI_PROMPT_TEXT="Transcribe this audio recording. If the audio contains any other sounds, don't add them as like [Bam sound], just transcribe the human words. Also, if audio contains 'uh' or 'umm', don't put them in the transcription."

# Advanced Audio Processing Settings (for voiceai.gemini.live.fast.py)
# Maximum size per segment before splitting (in MB)
MAX_SEGMENT_SIZE_MB="2.0"

# Speed multiplier for very large files (2.0 = 2x speed)
SPEED_MULTIPLIER="2.0"

# Silence detection threshold for sox (percentage or dB) - higher = fewer segments
SILENCE_THRESHOLD="5%"

# Minimum silence duration to split on (seconds) - higher = fewer segments
MIN_SILENCE_DURATION="3.0"
